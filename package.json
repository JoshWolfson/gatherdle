{
  "name": "gatherdle",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "migrate:up": "node ./src/db/migrate.js",
    "create-image": "docker build -t joshwolfson/gatherdle:latest .",
    "push-image": "docker login && docker push joshwolfson/gatherdle:latest",
    "use-image": "docker compose -f docker-compose.yml pull && docker compose -f docker-compose.yml up -d --force-recreate"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.5",
    "next": "15.5.3",
    "postgres": "^3.4.7",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
